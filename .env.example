# Fluent Chrome Extension Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Microsoft Translator API Configuration
# Get your key from: https://azure.microsoft.com/en-us/services/cognitive-services/translator/
MS_TRANSLATOR_KEY=your_microsoft_translator_api_key_here
MS_TRANSLATOR_REGION=eastus

# Claude API Configuration (Anthropic)
# Get your key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# Cloudflare Worker Configuration
# Set up your worker at: https://dash.cloudflare.com/
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_WORKER_NAME=fluent-translator

# Environment Configuration
# Options: development, staging, production
ENVIRONMENT=development

# Optional: API Rate Limits (requests per minute)
# Defaults shown, adjust based on your API plan
TRANSLATION_RATE_LIMIT=100
CONTEXT_RATE_LIMIT=20

# Optional: Cost Guards (monthly limits in USD)
# Defaults shown, adjust based on your budget
MAX_MONTHLY_TRANSLATION_COST=50
MAX_MONTHLY_CONTEXT_COST=50

# Optional: Cache Configuration
# Defaults shown, adjust based on usage patterns
CACHE_TTL_MINUTES=30
CACHE_MAX_ENTRIES=1000

# Development Only - DO NOT USE IN PRODUCTION
# DEV_BYPASS_AUTH=false  # NEVER set to true in production!